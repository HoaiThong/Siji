<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="4dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:layout_height="100dp"
        app:cardElevation="1dp">

        <ImageView
            android:id="@+id/icon_comic_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="6dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_detail_title"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:textStyle="bold"
            android:textColor="@color/color_tab"
            android:fontFamily="@font/comfortaa_regular"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/tv_detail_author"
            android:layout_width="match_parent"
            android:textStyle="italic"
            android:fontFamily="@font/comfortaa_regular"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp" />
        <TextView
            android:id="@+id/tv_detail_status"
            android:layout_width="match_parent"
            android:textStyle="italic"
            android:fontFamily="@font/comfortaa_regular"
            android:singleLine="true"
            android:textColor="@color/myColorPrimary"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp" />


        <TextView
            android:id="@+id/tv_view_sum"
            android:drawablePadding="8sp"
            android:drawableStart="@drawable/ic_red_eye"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>

